<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--suppress MybatisGenerateCustomPluginInspection -->
<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="useMapperCommentGenerator" value="false"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <!--value可以配置继承类-->
            <property name="mappers" value="com.org.wtf.common.dao.CommonMapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="forceAnnotation" value="true"/>
            <property name="beginningDelimiter" value=""/>
            <property name="endingDelimiter" value=""/>
        </plugin>

        <!--dateBase_settings 数据库设置-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://xx.xx.xxx.xxx/xxx"
                        userId="xxxx"
                        password="xxxx">
        </jdbcConnection>

        <!--MyBatis 生成器只需要生成 Model-->
        <javaModelGenerator targetPackage="src.test.java.com.xxx.xxx.sys.model" targetProject="auto-code-generator"/>
        <sqlMapGenerator targetPackage="src.test.java.com.xxx.xxx.sys.mapper" targetProject="auto-code-generator"/>
        <javaClientGenerator targetPackage="src.test.java.com.xxx.xxx.sys.dao" targetProject="auto-code-generator" type="XMLMAPPER"/>

        <!--tableName 表名称-->
        <table tableName="table_name"></table>

    </context>
</generatorConfiguration>